@model IList<MalmöTradera.web.ViewModel.ItemsListViewModel>

<div class="container">
      @foreach (var items in Model)
        {
            <div class="grid">
                <div class="top">
        
                   <img class="product-img" src="@items.ImageUrl">
                   
                </div>
                <div class="bottom">
                    <div class="center">@items.Name</div>
                    <div class="price">värde: @items.price kr</div>
                    <a asp-action="Details" asp-controller="Items" asp-route-id="@items.id" class="button">Se mer </a>
                </div>
                
            </div>
        }   
</div>